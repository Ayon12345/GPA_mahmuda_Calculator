        android:id="@+id/textViewCourse2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Course 2"
        android:textAppearance="?android:textAppearanceMedium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewGrade1"
        android:layout_marginTop="24dp"/>

    <EditText
        android:id="@+id/editTextCourse2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewCourse2"
        app:layout_constraintTop_toTopOf="@+id/textViewCourse2" />

    <!-- TextView and EditText for Grade 2 -->
