        app:layout_constraintTop_toTopOf="@+id/textViewGrade5" />

    <!-- Button to compute GPA -->
    <Button
        android:id="@+id/buttonComputeGPA"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Compute GPA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextGrade5"
        android:layout_marginTop="24dp"/>

    <!-- TextView to display calculated GPA -->
    <TextView
        android:id="@+id/textViewGPA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GPA: "
        android:textAppearance="?android:textAppearanceMedium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonComputeGPA"
        android:layout_marginTop="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
