    <EditText
        android:id="@+id/editTextGrade2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewGrade2"
        app:layout_constraintTop_toTopOf="@+id/textViewGrade2" />

    <!-- TextView and EditText for Course 3 -->
    <TextView
        android:id="@+id/textViewCourse3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Course 3"
        android:textAppearance="?android:textAppearanceMedium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewGrade2"
        android:layout_marginTop="24dp"/>

    <EditText
        android:id="@+id/editTextCourse3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewCourse3"
        app:layout_constraintTop_toTopOf="@+id/textViewCourse3" />

