<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- TextView and EditText for Course 1 -->
    <TextView
        android:id="@+id/textViewCourse1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Course 1"
        android:textAppearance="?android:textAppearanceMedium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextCourse1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewCourse1"
        app:layout_constraintTop_toTopOf="@+id/textViewCourse1" />

    <!-- TextView and EditText for Grade 1 -->
    <TextView
        android:id="@+id/textViewGrade1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grade 1"
        android:textAppearance="?android:textAppearanceMedium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewCourse1"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/editTextGrade1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewGrade1"
        app:layout_constraintTop_toTopOf="@+id/textViewGrade1" />

    <!-- TextView and EditText for Course 2 -->
