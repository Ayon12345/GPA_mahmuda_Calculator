    <EditText
        android:id="@+id/editTextCourse4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewCourse4"
        app:layout_constraintTop_toTopOf="@+id/textViewCourse4" />

    <!-- TextView and EditText for Grade 4 -->
    <TextView
        android:id="@+id/textViewGrade4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grade 4"
        android:textAppearance="?android:textAppearanceMedium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextCourse4"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/editTextGrade4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewGrade4"
        app:layout_constraintTop_toTopOf="@+id/textViewGrade4" />

    <!-- TextView and EditText for Course 5 -->
    <TextView
        android:id="@+id/textViewCourse5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Course 5"
        android:textAppearance="?android:textAppearanceMedium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewGrade4"
        android:layout_marginTop="24dp"/>

    <EditText
        android:id="@+id/editTextCourse5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
